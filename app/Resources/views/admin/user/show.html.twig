{% extends 'base.html.twig' %}

{% block title %}User show [admin]{% endblock %}

{% block body %}
    <h1 class="font-weight-bold text-center bg-dark text-white rounded mb-3 py-2">User</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr class="bg-secondary text-light font-weight-bold">
                <th class="w-25">Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th class="w-25">Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th class="w-25">Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th class="w-25">Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th class="w-25">Isactive</th>
                <td>{% if user.isActive %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

<hr>
<div class="col-12 text-center">
  <a href="{{ path('admin_user_index') }}" class="btn btn-primary">
    <i class="fa fa-arrow-circle-left" aria-hidden="true"></i> Back to the list
  </a>
</div>

<div class="d-flex justify-content-between">
        <a class="btn btn-warning" href="{{ path('admin_user_edit', { 'id': user.id }) }}">Edit</a>        {{ form_start(delete_form, {'attr': {'style': 'display: inline'}}) }}
            <input class="btn btn-danger" type="submit" value="Delete">
        {{ form_end(delete_form) }}</div>
{% endblock %}
