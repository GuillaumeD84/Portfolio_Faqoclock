{% extends 'base.html.twig' %}

{% block title %}Users list [admin]{% endblock %}

{% block body %}
    <h1 class="font-weight-bold text-center bg-dark text-white rounded mb-3 py-2">Users list</h1>

    <div class="col-12 text-center">
          <a href="{{ path('admin_user_new') }}" class="btn btn-success">Create a new user</a>
        </div>
        <hr>
    <table class="table table-striped table-hover text-center">
        <thead class="bg-secondary text-light">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Username</th>
                <th scope="col">Password</th>
                <th scope="col">Email</th>
                <th scope="col">Isactive</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('admin_user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.username }}</td>
                <td>&bull;&bull;&bull;&bull;&bull;&bull;</td>
                <td>{{ user.email }}</td>
                <td>{% if user.isActive %}Yes{% else %}No{% endif %}</td>
                <td>                      <div>
                          <a href="{{ path('admin_user_show', { 'id': user.id }) }}" title="show">                            <span class="badge badge-primary"><i class="fa fa-eye fa-lg" aria-hidden="true"></i></span>                          </a>
                      </div>                      <div>
                          <a href="{{ path('admin_user_edit', { 'id': user.id }) }}" title="edit">                            <span class="badge badge-warning"><i class="fa fa-pencil-square-o fa-lg" aria-hidden="true"></i></span>                          </a>
                      </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
