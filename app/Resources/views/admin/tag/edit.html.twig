{% extends 'base.html.twig' %}

{% block title %}Tag edit [admin]{% endblock %}

{% block body %}
    <h1 class="font-weight-bold text-center bg-dark text-white rounded mb-3 py-2">Tag edit (id: {{ tag.id }})</h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input class="btn btn-warning" type="submit" value="Edit">
    {{ form_end(edit_form) }}

<hr>
<div class="col-12 text-center">
  <a href="{{ path('admin_tag_index') }}" class="btn btn-primary">
    <i class="fa fa-arrow-circle-left" aria-hidden="true"></i> Back to the list
  </a>
</div>

<div class="d-flex justify-content-between">        {{ form_start(delete_form, {'attr': {'style': 'display: inline'}}) }}
            <input class="btn btn-danger" type="submit" value="Delete">
        {{ form_end(delete_form) }}</div>
{% endblock %}
