{% extends 'base.html.twig' %}

{% block title %}Roles list [admin]{% endblock %}

{% block body %}
    <h1 class="font-weight-bold text-center bg-dark text-white rounded mb-3 py-2">Roles list</h1>

    <div class="col-12 text-center">
          <a href="{{ path('admin_role_new') }}" class="btn btn-success">Create a new role</a>
        </div>
        <hr>
    <table class="table table-striped table-hover text-center">
        <thead class="bg-secondary text-light">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for role in roles %}
            <tr>
                <td><a href="{{ path('admin_role_show', { 'id': role.id }) }}">{{ role.id }}</a></td>
                <td>{{ role.name }}</td>
                <td>                      <div>
                          <a href="{{ path('admin_role_show', { 'id': role.id }) }}" title="show">                            <span class="badge badge-primary"><i class="fa fa-eye fa-lg" aria-hidden="true"></i></span>                          </a>
                      </div>                      <div>
                          <a href="{{ path('admin_role_edit', { 'id': role.id }) }}" title="edit">                            <span class="badge badge-warning"><i class="fa fa-pencil-square-o fa-lg" aria-hidden="true"></i></span>                          </a>
                      </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
