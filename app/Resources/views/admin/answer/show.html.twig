{% extends 'base.html.twig' %}

{% block title %}Answer show [admin]{% endblock %}

{% block body %}
    <h1 class="font-weight-bold text-center bg-dark text-white rounded mb-3 py-2">Answer</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr class="bg-secondary text-light font-weight-bold">
                <th class="w-25">Id</th>
                <td>{{ answer.id }}</td>
            </tr>
            <tr>
                <th class="w-25">Body</th>
                <td>{{ answer.body }}</td>
            </tr>
            <tr>
                <th class="w-25">Createdat</th>
                <td>{% if answer.createdAt %}{{ answer.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th class="w-25">Isblocked</th>
                <td>{% if answer.isBlocked %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

<hr>
<div class="col-12 text-center">
  <a href="{{ path('admin_answer_index') }}" class="btn btn-primary">
    <i class="fa fa-arrow-circle-left" aria-hidden="true"></i> Back to the list
  </a>
</div>

<div class="d-flex justify-content-between">
        <a class="btn btn-warning" href="{{ path('admin_answer_edit', { 'id': answer.id }) }}">Edit</a>        {{ form_start(delete_form, {'attr': {'style': 'display: inline'}}) }}
            <input class="btn btn-danger" type="submit" value="Delete">
        {{ form_end(delete_form) }}</div>
{% endblock %}
