{% extends 'base.html.twig' %}

{% block title %}Answers list [admin]{% endblock %}

{% block body %}
    <h1 class="font-weight-bold text-center bg-dark text-white rounded mb-3 py-2">Answers list</h1>

    <div class="col-12 text-center">
          <a href="{{ path('admin_answer_new') }}" class="btn btn-success">Create a new answer</a>
        </div>
        <hr>
    <table class="table table-striped table-hover text-center">
        <thead class="bg-secondary text-light">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Body</th>
                <th scope="col">Createdat</th>
                <th scope="col">Isblocked</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for answer in answers %}
            <tr>
                <td><a href="{{ path('admin_answer_show', { 'id': answer.id }) }}">{{ answer.id }}</a></td>
                <td>{{ answer.body }}</td>
                <td>{% if answer.createdAt %}{{ answer.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if answer.isBlocked %}Yes{% else %}No{% endif %}</td>
                <td>                      <div>
                          <a href="{{ path('admin_answer_show', { 'id': answer.id }) }}" title="show">                            <span class="badge badge-primary"><i class="fa fa-eye fa-lg" aria-hidden="true"></i></span>                          </a>
                      </div>                      <div>
                          <a href="{{ path('admin_answer_edit', { 'id': answer.id }) }}" title="edit">                            <span class="badge badge-warning"><i class="fa fa-pencil-square-o fa-lg" aria-hidden="true"></i></span>                          </a>
                      </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
