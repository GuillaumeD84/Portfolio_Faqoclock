{% extends 'base.html.twig' %}

{% block title %}{{ tag.title }}{% endblock %}

{% block body %}
  <h1 class="mt-3 text-center">{{ tag.title }}</h1>
  <h3 class="mt-3">Related questions</h3>
  <table class="my-questions-table table">
    <thead>
      <th>Link</th>
      <th>Title</th>
    </thead>
    <tbody>
      {% for question in questions %}
      <tr>
        <td>
          <a href="{{ path('question_show', { 'id': question.id }) }}" title="show">
            <span class="badge badge-secondary"><i class="fa fa-arrow-circle-right fa-lg" aria-hidden="true"></i></span>
          </a>
        </td>
        <td>{{ question.title }}</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
