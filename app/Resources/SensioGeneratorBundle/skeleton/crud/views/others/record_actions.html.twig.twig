<hr>
<div class="col-12 text-center">
  <a href="{{ "{{ path('" ~ route_name_prefix ~ "_index') }}" }}" class="btn btn-primary">
    <i class="fa fa-arrow-circle-left" aria-hidden="true"></i> Back to the list
  </a>
</div>

<div class="d-flex justify-content-between">
    {%- if ('edit' in actions) and (not hide_edit) %}

        <a class="btn btn-warning" href="{{ "{{ path('" ~ route_name_prefix ~ "_edit', { '"~ identifier ~"': " ~ entity_singularized ~ "."~ identifier ~" }) }}" }}">Edit</a>

    {%- endif %}

    {%- if ('delete' in actions) and (not hide_delete) %}
        {{ "{{ form_start(delete_form, {'attr': {'style': 'display: inline'}}) }}" }}
            <input class="btn btn-danger" type="submit" value="Delete">
        {{ '{{ form_end(delete_form) }}' }}
    {%- endif %}
</div>
